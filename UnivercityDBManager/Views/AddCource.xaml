<Page x:Class="UnivercityDBManager.Views.AddCource"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UnivercityDBManager.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddCource">

    <Page.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="10 0 0 0"/>
            <Setter Property="DockPanel.Dock" Value="Right"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Width" Value="170"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>
    </Page.Resources>
    <Grid Background="SlateGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">
            <Button x:Name="back_btn" DockPanel.Dock="Left" Content="Назад" Width="80" Height="20" Margin="5 0 0 0" Click="back_btn_Click"/>
            <TextBlock Text="Добавить курс"
                       FontSize="17" FontWeight="Black" Foreground="LightGray"
                       VerticalAlignment="Center" HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="-85 0 0 0"/>
        </DockPanel>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <DockPanel Margin="10">
                <TextBlock Text="Введите название курса:"/>
                <TextBox x:Name="courseNameField" />
            </DockPanel>
            <DockPanel Margin="10">
                <TextBlock Text="Введите ФИО преподавателя:"/>
                <TextBox x:Name="teacherNameField" />
            </DockPanel>
            <Button x:Name="addCourse_btn" Content="Добавить" Width="80" Height="20" Margin="0 20 0 0" IsDefault="True" Click="addCourse_btn_Click"/>
        </StackPanel>
    </Grid>
</Page>
